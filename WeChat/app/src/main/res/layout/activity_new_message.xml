<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:background="@color/title_color">

        <ImageView
            android:id="@+id/newmessage_back"
            android:layout_width="@dimen/backlen"
            android:layout_height="@dimen/backlen"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back" />

        <TextView
            style="@style/head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="新消息" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/juli"
        android:background="@color/white">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setting1"
                android:background="@color/white"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="接收新消息通知"/>
            <ToggleButton
                android:id="@+id/Button1"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/setting2"
                android:background="@color/white"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/button_width"
                style="@style/contact_fonts_stayle"
                android:text="接收语音和视频聊天邀请通知"/>
            <ToggleButton
                android:id="@+id/Button2"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn=""/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setting3"
                android:background="@color/white"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="视频聊天、语言聊天铃声"/>
            <ToggleButton
                android:id="@+id/Button3"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/juli">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/setting4"
                android:background="@color/white"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="通知显示消息详情"/>
            <ToggleButton
                android:id="@+id/Button4"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
        <TextView
            android:id="@+id/setting5"
            android:background="@color/white"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height"
            style="@style/contact_fonts_stayle"
            android:textColor="@color/ziti"
            android:textSize="14sp"
            android:text="@string/tongzhi"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="@dimen/juli">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setting6"
                android:background="@color/white"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="声音"/>
            <ToggleButton
                android:id="@+id/Button5"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <LinearLayout
            android:id="@+id/LinearLayout3"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setting7"
                android:background="@color/white"
                android:layout_width="270dp"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="新消息提示音"/>
            <TextView
                android:id="@+id/setting8"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:textColor="@color/ziti"
                android:textSize="14sp"
                android:text="跟随系统"/>
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="@dimen/line_height"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/setting9"
                android:background="@color/white"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="振动"/>
            <ToggleButton
                android:id="@+id/Button6"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn=""/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

