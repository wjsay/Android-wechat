<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:background="@color/title_color">

        <ImageView
            android:id="@+id/wurao_back"
            android:layout_width="@dimen/backlen"
            android:layout_height="@dimen/backlen"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back" />

        <TextView
            style="@style/head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="勿扰模式" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/juli"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/wurao1"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="勿扰模式"/>
            <ToggleButton
                android:id="@+id/Button7"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn=""/>
        </LinearLayout>
        <TextView
            android:id="@+id/wurao2"
            style="@style/contact_fonts_stayle"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height"
            android:background="@color/white"
            android:text="@string/wurao"
            android:textColor="@color/ziti"
            android:textSize="14dp" />
        <LinearLayout
            android:id="@+id/time_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/kstime1"
                    android:layout_width="265dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="开始时间"/>
                <TextView
                    android:id="@+id/kstime2"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14sp"
                    android:maxLines="1"
                    style="@style/contact_fonts_stayle"
                    android:text="中午12:00"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/jstime1"
                    android:layout_width="265dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="结束时间"/>
                <TextView
                    android:id="@+id/jstime2"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14sp"
                    style="@style/contact_fonts_stayle"
                    android:text="早上06:00"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
