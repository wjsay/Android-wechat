<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team2.wechat.contactlist.SeeMyNewFriend">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:background="@color/title_color">
        <ImageView
            android:id="@+id/iv_see_my_new_friend_back"
            android:layout_width="@dimen/backlen"
            android:layout_height="@dimen/backlen"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back" />

        <TextView
            style="@style/head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="设置" />
        <TextView
            android:id="@+id/tv_add_friends"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加朋友"
            style="@style/head_title"
            android:textColor="@color/white"/>

    </RelativeLayout>
    <RelativeLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:id="@+id/rl_see_my_friend_add_user"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="horizontal">
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/tj_sousuo"
            android:layout_marginLeft="10dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/sousuo"/>

        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@id/tj_sousuo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="   微信号/QQ号/手机号"
            android:textColor="@color/ziti"
            android:textSize="13sp" />
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/line_green"
            android:layout_marginBottom="15dp">
        </View>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新的朋友"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:paddingStart="10dp"/>
    <LinearLayout
        android:id="@+id/ll_my_new_friend_vertify"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </LinearLayout>

</LinearLayout>
