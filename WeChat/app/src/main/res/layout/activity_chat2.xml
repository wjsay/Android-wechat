<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:background="@color/title_color">

        <ImageView
            android:id="@+id/chat2_back"
            android:layout_width="@dimen/backlen"
            android:layout_height="@dimen/backlen"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back" />

        <TextView
            style="@style/head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="聊天" />

    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/juli"
        android:background="@color/white">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chat1"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="使用听筒播放语音"/>

            <ToggleButton
                android:id="@+id/Button8"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/chat2"
                android:layout_width="@dimen/text_width"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="回车键发送消息"/>

            <ToggleButton
                android:id="@+id/Button9"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_gravity="center"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <TextView
            android:id="@+id/chat3"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height"
            style="@style/contact_fonts_stayle"
            android:text="聊天背景"/>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <TextView
            android:id="@+id/chat4"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height"
            style="@style/contact_fonts_stayle"
            android:text="表情管理"/>
    </LinearLayout>
    <TextView
        android:id="@+id/log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/juli"
        android:textSize="14sp"
        android:text="     聊天记录"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/chat5"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height"
            style="@style/contact_fonts_stayle"
            android:text="聊天记录迁移"/>
        <View
            android:layout_width="@dimen/line_length"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="@color/line_black">
        </View>
        <TextView
            android:id="@+id/chat6"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height"
            style="@style/contact_fonts_stayle"
            android:text="清空聊天记录"/>
    </LinearLayout>
</LinearLayout>

