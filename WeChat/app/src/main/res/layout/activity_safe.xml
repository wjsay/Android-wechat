<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background_color">
    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48.0dp"
        android:background="@color/title_color">

        <ImageView
            android:id="@+id/safe_back"
            android:layout_width="@dimen/backlen"
            android:layout_height="@dimen/backlen"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/back" />

        <TextView
            style="@style/head_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="30dp"
            android:text="安全" />

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/zhanghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/juli"
            android:textSize="14sp"
            android:text="    账号"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/zhanghao1"
                    android:layout_width="275dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="微信号"/>
                <TextView
                    android:id="@+id/zhanghao2"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14dp"
                    style="@style/contact_fonts_stayle"
                    android:text="wenjiesay"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/zhanghao3"
                    android:layout_width="255dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="QQ号"/>
                <TextView
                    android:id="@+id/zhanghao4"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14dp"
                    style="@style/contact_fonts_stayle"
                    android:text="1368936399"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/zhanghao5"
                    android:layout_width="245dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="手机号"/>
                <TextView
                    android:id="@+id/zhanghao6"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14dp"
                    style="@style/contact_fonts_stayle"
                    android:text="15376495907"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/zhanghao7"
                    android:layout_width="275dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="邮件地址"/>
                <TextView
                    android:id="@+id/zhanghao8"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14dp"
                    style="@style/contact_fonts_stayle"
                    android:text="已验证"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/anquan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/juli"
            android:textSize="14sp"
            android:text="    安全"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/safe1"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="声音锁"/>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <TextView
                android:id="@+id/safe2"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="微信密码"/>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white">
                <TextView
                    android:id="@+id/safe3"
                    android:background="@color/white"
                    android:layout_width="260dp"
                    android:layout_height="@dimen/height"
                    android:drawablePadding="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="账号保护"/>
                <ImageView
                    android:id="@+id/imageview1"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baohu" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <TextView
                android:id="@+id/safe4"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="应急联系人"/>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/safe5"
                    android:layout_width="285dp"
                    android:layout_height="@dimen/height"
                    style="@style/contact_fonts_stayle"
                    android:text="手机安全防护"/>
                <TextView
                    android:id="@+id/safe6"
                    android:layout_width="@dimen/text_width"
                    android:layout_height="@dimen/height"
                    android:textColor="@color/ziti"
                    android:textSize="14dp"
                    style="@style/contact_fonts_stayle"
                    android:text="未启用"/>
            </LinearLayout>
            <View
                android:layout_width="@dimen/line_length"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:background="@color/line_black">
            </View>
            <TextView
                android:id="@+id/safe7"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height"
                style="@style/contact_fonts_stayle"
                android:text="微信安全中心"/>
            <TextView
                android:id="@+id/safe8"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                style="@style/contact_fonts_stayle"
                android:textColor="@color/ziti"
                android:textSize="14dp"
                android:text="@string/safecenter"/>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>
</LinearLayout>
