<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title_type"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center|left"
        android:text="A"
        android:layout_marginLeft="@dimen/contact_list_margin_horizontal"/>
        <!--就是不想让你看见自己的id-->
        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_clouddb_userid"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="数据库中用户的id"/>
    <RelativeLayout
        android:background="@drawable/press_white2lightgray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/contact_item_height">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/iv_address_icon"
            android:layout_marginLeft="@dimen/contact_list_margin_horizontal"
            android:layout_marginTop="@dimen/contact_list_margin_vertical"
            android:layout_width="@dimen/contact_image_edgelen"
            android:layout_height="@dimen/contact_image_edgelen"
            android:src="@drawable/head00"/>
        <TextView
            android:id="@+id/tv_address_name"
            android:layout_toRightOf="@id/iv_address_icon"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/contact_fonts_stayle"
            android:text="wjsay"/>
        <View
            android:background="@color/line_gray"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_height="0.5dp"/>
    </RelativeLayout>

</LinearLayout>
