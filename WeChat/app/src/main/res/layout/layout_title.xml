<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48.0dip"
    android:background="@color/bar_color" >

    <TextView
        android:id="@+id/txt_title"
        style="@style/txt_headtop_style"
        android:text="@string/app_name"
        android:padding="@dimen/app_paddling_left"/>
    <ImageView
        android:id="@+id/iv_more_menu"
        android:layout_width="48.0dp"
        android:layout_height="match_parent"
        android:src="@drawable/more_view"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>
    <ImageView
        android:id="@+id/iv_top_search"
        android:layout_width="48.0dp"
        android:layout_height="match_parent"
        android:src="@drawable/search_view"
        android:visibility="visible"
        android:layout_toLeftOf="@id/iv_more_menu"
        android:layout_marginRight="@dimen/activity_horizontal_margin"/>



</RelativeLayout>